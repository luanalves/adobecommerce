<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header.links">
            <block class="TheDevKitchen\JwtCrossDomainAuth\Block\Link" 
                   name="cross-domain-link"
                   template="TheDevKitchen_JwtCrossDomainAuth::header/link.phtml" 
                   after="-" />
        </referenceBlock>
        
        <!-- Add the loader widget styling -->
        <referenceContainer name="head.additional">
            <block class="Magento\Framework\View\Element\Template" 
                   name="cross-domain-loader-css"
                   template="TheDevKitchen_JwtCrossDomainAuth::loader/styles.phtml" />
        </referenceContainer>
        
        <!-- Explicitly load our JavaScript -->
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                   name="jwt_crossdomain_js"
                   template="TheDevKitchen_JwtCrossDomainAuth::js-init.phtml" />
        </referenceContainer>
    </body>
</page>